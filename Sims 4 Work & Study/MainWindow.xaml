<Window x:Class="Sims_4_Work___Study.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="The Sims 4 Work &amp; Study" 
        Height="650" 
        Width="450"
        MinHeight="550"
        MinWidth="400"
        MaxWidth="500"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        WindowStartupLocation="CenterScreen"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing">
    
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo>
            <TaskbarItemInfo.ThumbButtonInfos>
                <ThumbButtonInfoCollection>
                    <ThumbButtonInfo x:Name="thumbPrevious"
                                   Description="Música Anterior" 
                                   Click="TaskbarPrevious_Click"/>
                    <ThumbButtonInfo x:Name="thumbPlayPause"
                                   Description="Pausar/Continuar"
                                   Click="TaskbarPlayPause_Click"/>
                    <ThumbButtonInfo x:Name="thumbNext"
                                   Description="Próxima Música"
                                   Click="TaskbarNext_Click"/>
                </ThumbButtonInfoCollection>
            </TaskbarItemInfo.ThumbButtonInfos>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho com informações da música atual -->
        <Border Grid.Row="0" 
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                Padding="20,16">
            <StackPanel>
                <TextBlock x:Name="txtMusicName"
                          Text="Carregando música..."
                          FontSize="18"
                          FontWeight="SemiBold"
                          Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                          TextWrapping="Wrap"/>
                <TextBlock x:Name="txtMusicNumber"
                          Text="-- / --"
                          FontSize="13"
                          Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                          Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Lista de músicas disponíveis -->
        <Border Grid.Row="1" 
                Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="0,1,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                          Text="Músicas Disponíveis"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                          Margin="20,16,20,12"/>

                <ListBox x:Name="lstMusicFolders"
                        Grid.Row="1"
                        BorderThickness="0"
                        Margin="12,0"
                        Background="Transparent"
                        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="Margin" Value="0,0,0,4"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Grid.Column="0"
                                                        Kind="MusicNote"
                                                        Width="20"
                                                        Height="20"
                                                        Margin="0,0,12,0"
                                                        VerticalAlignment="Center"
                                                        Foreground="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}"/>

                                <TextBlock Grid.Column="1"
                                          Text="{Binding DisplayName}"
                                          FontSize="13"
                                          VerticalAlignment="Center"
                                          TextWrapping="Wrap"/>

                                <TextBlock Grid.Column="2"
                                          Text="{Binding Status}"
                                          FontSize="11"
                                          VerticalAlignment="Center"
                                          Margin="8,0,0,0"
                                          Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Controles de reprodução -->
        <Border Grid.Row="2" 
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                Padding="20,16">
            <StackPanel>
                <!-- Controles Play/Pause/Next/Previous -->
                <UniformGrid Columns="3" Rows="1" Margin="0,0,0,16">
                    <Button x:Name="btnPrevious"
                           Height="40"
                           Margin="0,0,4,0"
                           Click="BtnPrevious_Click"
                           Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                           Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                           BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                           ToolTip="Música Anterior">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="SkipPrevious" Width="20" Height="20" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Anterior" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnPlayPause"
                           Height="40"
                           Margin="4,0"
                           Click="BtnPlayPause_Click"
                           Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}"
                           Foreground="White"
                           FontWeight="SemiBold"
                           ToolTip="Pausar/Continuar">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon x:Name="iconPlayPause" Kind="Pause" Width="20" Height="20" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtPlayPause" Text="Pausar" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnNext"
                           Height="40"
                           Margin="4,0,0,0"
                           Click="BtnNext_Click"
                           Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                           Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                           BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                           ToolTip="Próxima Música">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Próxima" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <materialDesign:PackIcon Kind="SkipNext" Width="20" Height="20" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>

                <!-- Volume -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Grid.Column="0"
                                            Kind="VolumeHigh"
                                            Width="24"
                                            Height="24"
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"
                                  Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>

                    <Slider x:Name="volumeSlider"
                           Grid.Column="1"
                           Minimum="0"
                           Maximum="100"
                           Value="100"
                           VerticalAlignment="Center"
                           ValueChanged="VolumeSlider_ValueChanged"
                           AutoToolTipPlacement="TopLeft"
                           AutoToolTipPrecision="0"/>

                    <TextBlock Grid.Column="2"
                              Text="{Binding Value, ElementName=volumeSlider, StringFormat={}{0:F0}%}"
                              FontSize="13"
                              VerticalAlignment="Center"
                              Width="45"
                              TextAlignment="Right"
                              Margin="12,0,0,0"
                              Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                </Grid>

                <!-- Posição da música -->
                <Grid Margin="0,0,0,5">
                    <TextBlock Text="Posição" FontWeight="SemiBold" HorizontalAlignment="Left"
                              Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                    <TextBlock x:Name="txtProgressTime" 
                                Text="0:00 / 0:00" 
                                HorizontalAlignment="Right" 
                                FontSize="11"
                                Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                Opacity="0.7"/>
                </Grid>
                <Slider 
                    x:Name="positionSlider" 
                    Minimum="0" 
                    Maximum="100" 
                    Value="0" 
                    TickFrequency="1"
                    PreviewMouseDown="PositionSlider_PreviewMouseDown"
                    PreviewMouseUp="PositionSlider_PreviewMouseUp"
                    ValueChanged="PositionSlider_ValueChanged"/>
            </StackPanel>
        </Border>

        <!-- Configurações -->
        <Border Grid.Row="3"
                Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="0,1,0,0"
                Padding="20,12">
            <StackPanel>
                <!-- Chance de trocar canal -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                              Text="Chance de trocar canal ao mudar de janela:"
                              FontSize="12"
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBox x:Name="txtChangeChannelChance"
                                Width="45"
                                Height="26"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                FontSize="13"
                                TextChanged="TxtChangeChannelChance_TextChanged"/>
                        <TextBlock Text="%"
                                  FontSize="13"
                                  VerticalAlignment="Center"
                                  Margin="4,0,0,0"
                                  Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                    </StackPanel>
                </Grid>

                <!-- Minimizar para bandeja -->
                <CheckBox x:Name="chkMinimizeToTray"
                         Content="Minimizar para a bandeja do sistema"
                         FontSize="12"
                         Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                         Checked="ChkMinimizeToTray_Changed"
                         Unchecked="ChkMinimizeToTray_Changed"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
